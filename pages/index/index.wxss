/* 商城首页 css */

/* 轮播图样式 */
.banner-image {
    width: 100%;
    height: 100%;
}

/* 分类菜单样式 */
.menus {
    display: flex;
    justify-content: space-around;
    padding: 20rpx 0;
}

/* 分类菜单图片样式 */
.menus image {
    width: 128rpx;
    height: 140rpx;
}

/* 标题图片样式 */
.floor-title image {
    width: 100%;
    height: 60rpx;
    margin-left: 10rpx;
}

/* 商品展示列表样式 */
.floor {
    display: flex;
    justify-content: space-between;
    padding: 16rpx;
}

/* 左侧大图样式 */
.floor .left image {
    width: 232rpx;
    height: 390rpx;
}

/* 右侧小图布局 */
.floor .right {
    flex: 1;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding-left: 20rpx;
}

/* 右侧小图样式 */
.floor .right image {
    width: 230rpx;
    height: 190rpx;
}
